<div class="container">
  <h1>投稿一覧</h1>

  <div class="row">
    <% @posts.each do |post| %>
      <!-- どのメモも公開されていない場合はスキップ -->
      <% next unless post.first_post_status || post.second_post_status || post.third_post_status %>

      <div class="col-md-6 mb-5">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-start align-items-center mb-3">
              <%= image_tag post.user.get_profile_image, class: "rounded-circle mr-3", width: 50, height: 50 %>
              <div>
                <span class="font-weight-bold"><%= post.user.name %></span><br>
                <span class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
              </div>
            </div>

            <!-- 公開されたメモのみ表示 -->
            <% if post.first_post_status %>
              <h5 class="card-title mb-3 text-left"><%= post.first_memo %></h5>
            <% end %>

            <% if post.second_memo.present? && post.second_post_status %>
              <h5 class="card-title mb-3 text-left"><%= post.second_memo %></h5>
            <% end %>

            <% if post.third_memo.present? && post.third_post_status %>
              <h5 class="card-title mb-3 text-left"><%= post.third_memo %></h5>
            <% end %>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="mr-3"><%= post.comments.count %> コメント</span>

              <% if post.favorited_by?(current_user) %>
                <%= link_to public_post_favorites_path(post), method: :delete, class: "btn btn-outline-danger btn-sm" do %>
                  ♥<%= post.favorites.count %> いいね
                <% end %>
              <% else %>
                <%= link_to public_post_favorites_path(post), method: :post, class: "btn btn-outline-primary btn-sm" do %>
                  ♡<%= post.favorites.count %> いいね
                <% end %>
              <% end %>

              <%= link_to '詳細を見る', public_post_path(post), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
