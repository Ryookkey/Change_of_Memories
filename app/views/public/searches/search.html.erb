<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがuserのとき-->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, public_user_path(user), method: :get %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがメモの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.first_memo, public_post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
