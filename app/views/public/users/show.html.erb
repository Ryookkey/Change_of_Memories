<div class="container">
  <h1><%= @user.name %> の投稿一覧</h1><br>

  <div class="row">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="col-md-6 mb-5">
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-start align-items-center mb-3">
                <%= image_tag post.user.get_profile_image, class: "rounded-circle mr-3", width: 50, height: 50 %>
                <div>
                  <span class="font-weight-bold"><%= post.user.name %></span><br>
                  <span class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                </div>
              </div>

              <!-- タイトルの表示 -->
              <div class="mt-3">
                <h5>タイトル</h5>
                <p><%= post.title.present? ? post.title : '未記入です' %></p>
              </div>

              <!-- First Memo と公開ステータス -->
              <div class="mt-3">
                <h5 class="card-title mb-3 text-left">First Memo</h5>
                <% if post.first_post_status || post.user == current_user %>
                  <p class="mb-4"><%= post.first_memo %></p>
                <% else %>
                  <p>このメモは非公開です。</p>
                <% end %>
                <!-- 公開/非公開のステータスを表示 -->
                <%= button_tag post.first_post_status ? "公開" : "非公開", class: post.first_post_status ? 'btn btn-success btn-sm' : 'btn btn-danger btn-sm' %>
              </div>

              <!-- Second Memo と公開ステータス -->
              <% if post.second_memo.present? %>
                <div class="mt-3">
                  <h5 class="card-title mb-3 text-left">Second Memo</h5>
                  <% if post.second_post_status || post.user == current_user %>
                    <p class="mb-4"><%= post.second_memo %></p>
                  <% else %>
                    <p>このメモは非公開です。</p>
                  <% end %>
                  <!-- 公開/非公開のステータスを表示 -->
                  <%= button_tag post.second_post_status ? "公開" : "非公開", class: post.second_post_status ? 'btn btn-success btn-sm' : 'btn btn-danger btn-sm' %>
                </div>
              <% end %>

              <!-- Third Memo と公開ステータス -->
              <% if post.third_memo.present? %>
                <div class="mt-3">
                  <h5 class="card-title mb-3 text-left">Third Memo</h5>
                  <% if post.third_post_status || post.user == current_user %>
                    <p class="mb-4"><%= post.third_memo %></p>
                  <% else %>
                    <p>このメモは非公開です。</p>
                  <% end %>
                  <!-- 公開/非公開のステータスを表示 -->
                  <%= button_tag post.third_post_status ? "公開" : "非公開", class: post.third_post_status ? 'btn btn-success btn-sm' : 'btn btn-danger btn-sm' %>
                </div>
              <% end %>

              <!-- コメント数といいね数の表示 -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="mr-3"><%= post.comments.count %> コメント</span>

                <% if post.favorited_by?(current_user) %>
                  <%= link_to public_post_favorites_path(post), method: :delete, class: "btn btn-outline-danger btn-sm" do %>
                    ♥<%= post.favorites.count %> いいね
                  <% end %>
                <% else %>
                  <%= link_to public_post_favorites_path(post), method: :post, class: "btn btn-outline-primary btn-sm" do %>
                    ♡<%= post.favorites.count %> いいね
                  <% end %>
                <% end %>

                <%= link_to '詳細を見る', public_post_path(post), class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    <% else %>
      <div class="col-12 mt-5 text-center">
        <h5>まだ投稿がありません。</h5>
      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="row justify-content-center">
    <div class="col-auto">
      <%= paginate @posts %>
    </div>
  </div>
</div>
