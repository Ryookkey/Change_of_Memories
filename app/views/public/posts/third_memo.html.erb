<div class="container">
  <div class="row mt-5">
    <h1>Third Memo</h1>
  </div>

  <div class="row mt-5 justify-content-center">
    <%= form_with model: @post, url: public_post_path(@post), method: :patch, local: true, class: 'w-50' do |form| %>
      <h4>Third Memo</h4>

      <%= form.text_area :third_memo, class: 'form-control w-100 mb-4' %>

      <div class="d-flex justify-content-center">
        <%= form.submit '完了', class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>
</div>
