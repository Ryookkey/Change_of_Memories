<h1>投稿内容</h1>

<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex align-items-center">
      <div class="mr-3">
        <%= image_tag @post.user.get_profile_image, class: "rounded-circle", width: 50, height: 50 %>
      </div>
      <div>
        <h5 class="card-title mb-1"><%= @post.user.name %></h5>
        <p class="text-muted mb-1"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      </div>
    </div>

    <div class="mt-3">
      <h5>First Memo</h5>
      <p><%= @post.first_memo %></p>
    </div>

    <% if @post.second_memo.present? %>
      <div class="mt-3">
        <h5>Second Memo</h5>
        <p><%= @post.second_memo %></p>
      </div>
    <% end %>

    <% if @post.third_memo.present? %>
      <div class="mt-3">
        <h5>Third Memo</h5>
        <p><%= @post.third_memo %></p>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to '編集する', edit_public_post_path(@post), class: "btn btn-success mr-2" %>
      <%= link_to '削除', public_post_path(@post), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>

<div>
  <br>
  <div class="d-flex justify-content-start align-items-center">
    <p class="mr-3">コメント件数: <%= @post.comments.count %></p>

    <% if @post.favorited_by?(current_user) %>
      <p>
        <%= link_to "♥#{@post.favorites.count} いいね", public_post_favorites_path(@post), method: :delete ,class: "btn btn-outline-danger btn-sm"%>
      </p>
    <% else %>
      <p>
        <%= link_to "♡#{@post.favorites.count} いいね", public_post_favorites_path(@post), method: :post ,class: "btn btn-outline-danger btn-sm"%>
      </p>
    <% end %>
  </div>

  <% if @post.comments.any? %>
    <div class="mt-4">
      <% @post.comments.each do |post_comment| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="mr-3">
                <%= image_tag post_comment.user.get_profile_image, class: "rounded-circle", width: 50, height: 50 %>
              </div>
              <div>
                <h5 class="card-title mb-1"><%= post_comment.user.name %></h5>
                <p class="text-muted mb-1"><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
              </div>
            </div>

            <p class="card-text mt-3"><%= post_comment.comment %></p>
            <% if post_comment.user == current_user %>
              <%= link_to "削除", public_post_comment_path(@post, post_comment), method: :delete, class: "btn btn-danger"%>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>まだコメントがありません。</p>
  <% end %>
</div>

<div>
  <%= form_with(model: [@post, Comment.new], url: public_post_comments_path(@post), local: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :comment, rows: '5', class: "form-control", placeholder: "コメントをここに" %>
    </div>
    <%= f.submit "送信する", class: "btn btn-primary" %>
  <% end %>
</div>
