<div class="container mt-5">
  <h1 class="mb-4">投稿内容</h1>

  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex align-items-center mb-4">
        <div class="mr-3">
          <%= image_tag @post.user.get_profile_image, class: "rounded-circle", width: 50, height: 50 %>
        </div>
        <div>
          <span class="font-weight-bold"><%= link_to @post.user.name, public_user_path(@post.user) %></span><br>
          <span class="text-muted"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
        </div>
      </div>

      <!-- First Memo -->
      <div class="mt-4">
        <h6>First Memo</h6>
        <% if @post.first_post_status || @post.user == current_user %>
          <p><%= @post.first_memo %></p>
        <% else %>
          <p>このメモは非公開です。</p>
        <% end %>

        <% if @post.user == current_user %>
          <%= button_tag @post.first_post_status ? "公開" : "非公開", class: @post.first_post_status ? 'btn btn-success btn-sm' : 'btn btn-secondary btn-sm', style: 'margin-top: 10px;' %>
        <% end %>
      </div>

      <!-- Second Memo -->
      <% if @post.second_memo.present? %>
        <div class="mt-4">
          <h6>Second Memo</h6>
          <% if @post.second_post_status || @post.user == current_user %>
            <p><%= @post.second_memo %></p>
          <% else %>
            <p>このメモは非公開です。</p>
          <% end %>

          <% if @post.user == current_user %>
            <%= button_tag @post.second_post_status ? "公開" : "非公開", class: @post.second_post_status ? 'btn btn-success btn-sm' : 'btn btn-secondary btn-sm', style: 'margin-top: 10px;' %>
          <% end %>
        </div>
      <% end %>

      <!-- Third Memo -->
      <% if @post.third_memo.present? %>
        <div class="mt-4">
          <h6>Third Memo</h6>
          <% if @post.third_post_status || @post.user == current_user %>
            <p><%= @post.third_memo %></p>
          <% else %>
            <p>このメモは非公開です。</p>
          <% end %>

          <% if @post.user == current_user %>
            <%= button_tag @post.third_post_status ? "公開" : "非公開", class: @post.third_post_status ? 'btn btn-success btn-sm' : 'btn btn-secondary btn-sm', style: 'margin-top: 10px;' %>
          <% end %>
        </div>
      <% end %>

      <div class="mt-4">
        <% if @post.user == current_user %>
          <%= link_to '編集する', edit_public_post_path(@post), class: "btn btn-primary mr-2" %>
          <%= link_to '削除', public_post_path(@post), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <div class="d-flex justify-content-start align-items-center mb-4">
      <p class="mr-3">コメント件数: <%= @post.comments.count %></p>

      <% if @post.favorited_by?(current_user) %>
        <p>
          <%= link_to "♥#{@post.favorites.count} いいね", public_post_favorites_path(@post), method: :delete, class: "btn btn-outline-danger btn-sm" %>
        </p>
      <% else %>
        <p>
          <%= link_to "♡#{@post.favorites.count} いいね", public_post_favorites_path(@post), method: :post, class: "btn btn-outline-primary btn-sm" %>
        </p>
      <% end %>
    </div>

    <!-- コメント部分 -->
    <% if @post.comments.any? %>
      <div class="mt-4">
        <% @post.comments.each do |post_comment| %>
          <div class="card mb-3">
            <div class="card-body p-3">
              <div class="d-flex align-items-center mb-2">
                <div class="mr-3">
                  <%= image_tag post_comment.user.get_profile_image, class: "rounded-circle", width: 40, height: 40 %>
                </div>
                <div>
                  <h6 class="card-title mb-1"><%= link_to post_comment.user.name, public_user_path(post_comment.user) %></h6>
                  <p class="text-muted mb-1"><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
                </div>
              </div>

              <p class="card-text"><%= post_comment.comment %></p>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", public_post_comment_path(@post, post_comment), method: :delete, class: "btn btn-danger btn-sm" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h4>まだコメントがありません。</h4>
    <% end %>
  </div>

  <!-- コメント入力フォーム -->
  <div class="mt-5">
    <%= form_with(model: [@post, Comment.new], url: public_post_comments_path(@post), local: true) do |f| %>
      <% if f.object.errors.any? %>
        <div id="error_explanation" class="mt-4">
          <h2><%= pluralize(f.object.errors.count, "error") %> prevented this comment from being saved:</h2>
          <ul>
            <% f.object.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.text_area :comment, rows: '3', class: "form-control", placeholder: "コメント欄" %>
      </div>
      <%= f.submit "送信する", class: "btn btn-primary mb-4" %>
    <% end %>
  </div>
</div>
