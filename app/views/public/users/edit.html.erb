<div class="container mt-7">
  <div class="row mb-4">
    <h3 class="mb-5">会員情報編集</h3>
  </div>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, class: "bg-light p-4 rounded" do |f| %>

    <div class="form-group row mt-3 mb-4">
      <label for="name" class="col-md-3 col-form-label">氏名</label>
      <div class="col-md-9">
        <%= f.text_field :name, class: "form-control", id: "name" %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="introduction" class="col-md-3 col-form-label">自己紹介</label>
      <div class="col-md-9">
        <%= f.text_area :introduction, rows: 3, class: "form-control", id: "introduction" %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="profile_image" class="col-md-3 col-form-label">プロフィール画像</label>
      <div class="col-md-9">
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file", id: "profile_image" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-9 offset-md-3">
        <%= f.submit "更新", class: "btn btn-primary" %>
        <%= link_to '退会する', user_unsubscribe_path(@user), class: "btn btn-danger ml-3" %>
      </div>
    </div>
  <% end %>
</div>
