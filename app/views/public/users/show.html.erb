<div class="container">
  <h1><%= @user.name %> の投稿一覧</h1>

  <div class="row">
    <% grouped_posts = @posts.group_by(&:group_id) %> <!-- ビューでグループ化 -->

    <% if grouped_posts.any? %>
      <% grouped_posts.each do |group_id, posts| %>
        <div class="col-md-6 mb-5">
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-start align-items-center mb-3">
                <!-- グループ内の最初の投稿を取得 -->
                <%= image_tag posts.first.user.get_profile_image, class: "rounded-circle mr-3", width: 50, height: 50 %>
                <div>
                  <span class="font-weight-bold"><%= posts.first.user.name %></span><br>
                  <span class="text-muted"><%= posts.first.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                </div>
              </div>

              <!-- タイトルの表示 -->
              <div class="mt-3">
                <h5>タイトル</h5>
                <p><%= posts.first.title.present? ? posts.first.title : '未記入です' %></p>
              </div>

              <!-- 公開されたメモのみ表示 -->
              <% if posts.first.first_post_status || posts.first.user == current_user %>
                <h5 class="card-title mb-3 text-left">First Memo</h5>
                <p class="mb-4"><%= posts.first.first_memo %></p>
              <% else %>
                <h5 class="card-title mb-3 text-left">First Memo</h5>
                <p>このメモは非公開です。</p>
              <% end %>

              <!-- Second Memo -->
              <% if posts.first.second_memo.present? %>
                <h5 class="card-title mb-3 text-left">Second Memo</h5>
                <% if posts.first.second_post_status || posts.first.user == current_user %>
                  <p class="mb-4"><%= posts.first.second_memo %></p>
                <% else %>
                  <p>このメモは非公開です。</p>
                <% end %>
              <% end %>

              <!-- Third Memo -->
              <% if posts.first.third_memo.present? %>
                <h5 class="card-title mb-3 text-left">Third Memo</h5>
                <% if posts.first.third_post_status || posts.first.user == current_user %>
                  <p class="mb-4"><%= posts.first.third_memo %></p>
                <% else %>
                  <p>このメモは非公開です。</p>
                <% end %>
              <% end %>

              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="mr-3"><%= posts.first.comments.count %> コメント</span>

                <% if posts.first.favorited_by?(current_user) %>
                  <%= link_to public_post_favorites_path(posts.first), method: :delete, class: "btn btn-outline-danger btn-sm" do %>
                    ♥<%= posts.first.favorites.count %> いいね
                  <% end %>
                <% else %>
                  <%= link_to public_post_favorites_path(posts.first), method: :post, class: "btn btn-outline-primary btn-sm" do %>
                    ♡<%= posts.first.favorites.count %> いいね
                  <% end %>
                <% end %>

                <%= link_to '詳細を見る', public_post_path(posts.first), class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- ページネーション -->
      <div class="row justify-content-center">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="col-12 mt-5 text-center">
        <h5>まだ投稿がありません。</h5>
      </div>
    <% end %>
  </div>
</div>
