<div class="row">
  <div class="text-center">
  <!-- プロフィール画像 -->
  <div class="mb-3">
    <%= image_tag @user.get_profile_image, class: "rounded-circle", width: 100, height: 100 %>
  </div>

  <!-- ユーザ名 -->
  <h4><%= @user.name %></h4>

  <!-- フォロー数とフォロワー数 -->
  <div class="d-flex justify-content-center mb-3">
    <div class="mr-3">
      フォロー数: <%= link_to @user.followings.count, public_user_followings_path(@user) %>
    </div>
    <div>
      フォロワー数: <%= link_to @user.followers.count, public_user_followers_path(@user) %>
    </div>
  </div>

  <!-- プロフィール編集ボタン -->
  <div class="mb-3">
    <%= link_to 'プロフィール編集', edit_public_user_path, class: "btn btn-primary" %>
  </div>

  <!-- フォローボタン -->
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", public_user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
    <% else %>
      <%= link_to "フォローする", public_user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
    <% end %>
  <% end %>

  <!-- ユーザの自己紹介 -->
  <div class="mt-3">
    <p><%= @user.introduction %></p>
  </div>
</div>

</div>

<div class="row">
  <% @posts.each do |group_id, posts| %>
    <div class="col-md-5 mb-5">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">メモグループ <%= group_id %></h5>

          <!-- 各メモを表示 -->
          <% posts.each do |post| %>
            <% if post.first_memo.present? %>
              <p class="card-text">1つ目のメモ: <%= post.first_memo %></p>
            <% end %>
            <% if post.second_memo.present? %>
              <p class="card-text">2つ目のメモ: <%= post.second_memo %></p>
            <% end %>
            <% if post.third_memo.present? %>
              <p class="card-text">3つ目のメモ: <%= post.third_memo %></p>
            <% end %>
          <% end %>

          <!-- その他の情報を表示 -->
          <div class="d-flex align-items-center">
            <div class="text-center">
              <%= image_tag @user.get_profile_image, class: "mr-3 rounded-circle", width: 50, height: 50 %>
              <div><%= @user.name %></div>
            </div>
            <div class="ml-3">
              <span class="mr-3"><%= posts.first.comments.count %> コメント</span>
              <span class="text-muted"><%= posts.first.created_at.strftime('%Y/%m/%d %H:%M') %></span>
            </div>
          </div>

          <%= link_to '詳細を見る', public_post_path(posts.first), class: "btn btn-primary mt-3" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
