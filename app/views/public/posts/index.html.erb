<div class="container">
  <div class="row mb-3">
    <h4>投稿一覧</h4>
  </div>
  <div class="row">
    <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-5 mb-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">メモ</h5>
            <p class="card-text">
              <%= post.first_memo %>
            </p>
            <div class="d-flex align-items-center">
              <div class="text-center">
                <%= image_tag post.user.get_profile_image, class: "mr-3 rounded-circle" %>
                <div><%= post.user.name %></div> 
              </div>
              <div class="ml-3">
                <span class="mr-3"><%= post.comments.count %> コメント</span>
                <span class="text-muted"><%= post.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M') %></span>
              </div>
            </div>
            <%= link_to '詳細を見る', public_post_path(post), class: "btn btn-primary mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
